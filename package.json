{
  "name": "aloes-handlers",
  "version": "1.2.12",
  "main": "./src/index.js",
  "scripts": {
    "lint": "npx eslint --ext js .",
    "test:aloes-detector": "export NODE_ENV=test; mocha './src/test/detector.spec.js'",
    "test:aloes-encoder": "export NODE_ENV=test; mocha './src/test/encoder.spec.js'",
    "test:aloes": "npm run test:aloes-detector; npm run test:aloes-encoder",
    "test": "npm run test:aloes",
    "docs:md": "jsdoc2md -c jsdoc-conf.json ./src/*/* > ./docs/aloesclient/README.md",
    "docs:dev": "npm run docs:md ; cp ./README.md ./docs/readme/. ; vuepress dev docs",
    "docs:build": "npm run docs:md ; cp ./README.md ./docs/readme/. ; vuepress build docs",
    "docs:serve": "light-server -s public -p 7000 --servePrefix /aloes-handlers/",
    "lib:build": "npx babel src --out-dir dist --ignore './src/test/*.spec.js'",
    "lib:build-min": "npx babel ./src --ignore './src/test/*.spec.js' --presets minify --out-file ./aloes-handlers.min.js",
    "prePublish": "npm run lint; npm run test; npm run lib:build"
  },
  "files": [
    "src/*",
    "package.json",
    "README.md"
  ],
  "author": "Edouard Maleix <ed@getlarge.eu> (https://getlarge.eu)",
  "keywords": [
    "IoT",
    "MQTT",
    "Interoperability"
  ],
  "license": "AGPL-3.0-or-later",
  "engines": {
    "node": ">=9.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "aloes-logger": "^1.0.5",
    "mqtt-pattern": "^1.2.0",
    "oma-json": "^1.0.7"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^2.6.2",
    "identity-obj-proxy": "^3.0.0",
    "jsdoc-to-markdown": "^5.0.3",
    "light-server": "^2.6.4",
    "mocha": "^7.0.1",
    "prettier": "1.16.1",
    "vuepress": "^1.3.0"
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "no-param-reassign": "off",
      "one-var-declaration-per-line": "off"
    },
    "globals": {
      "require": true
    }
  },
  "eslintIgnore": [
    "/dist/",
    "/public/",
    "/docs/",
    "/node_modules/",
    "/src/test/*.spec.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://framagit.org/aloes/aloes-handlers"
  },
  "contributors": [
    "Edouard Maleix <ed@getlarge.eu> (https://getlarge.eu)"
  ],
  "description": "Encode / decode MQTT stream from IoT devices to Web browsers."
}
