{
  "aloesClient": {
    "collectionPattern": "+userId/+collectionName/+method",
    "instancePattern": "+userId/+collectionName/+method/+modelId",
    "validators": {
      "userId": "string",
      "collectionName": ["Account", "Device", "Sensor", "VirtualObject"],
      "modelId": "string",
      "methods": ["POST", "GET", "PUT", "DELETE"]
    }
  },
  "mySensors": {
    "pattern": "+prefixedDevEui/+nodeId/+sensorId/+method/+ack/+subType",
    "validators": {
      "userId": "string",
      "nodeId": "number",
      "sensorId": "number",
      "subType": "number",
      "methods": [0, 1, 2, 3, 4]
    }
  },
  "aloes": {
    "pattern": "+prefixedDevEui/+method/+ipsoObjectId/+sensorId/+ipsoResourcesId",
    "validators": {
      "prefixedDevEui": "string",
      "nodeId": "number",
      "sensorId": "number",
      "subType": "number",
      "methods": [0, 1, 2, 3, 4]
    }
  }
}
