{
  "aloesClient": {
    "collectionPattern": "+userId/+collectionName/+method",
    "instancePattern": "+userId/+collectionName/+method/+modelId",
    "validators": {
      "userId": "string",
      "collectionName": ["Account", "Device", "Sensor", "VirtualObject", "IoTAgent"],
      "modelId": "string",
      "methods": ["HEAD", "POST", "GET", "PUT", "DELETE"]
    }
  },
  "mySensors": {
    "pattern": "+prefixedDevEui/+nodeId/+sensorId/+method/+ack/+subType",
    "validators": {
      "userId": "string",
      "nodeId": "number",
      "sensorId": "number",
      "subType": "number",
      "methods": [0, 1, 2, 3, 4]
    }
  },
  "aloesLight": {
    "pattern": "+prefixedDevEui/+method/+omaObjectId/+sensorId/+omaResourceId",
    "validators": {
      "prefixedDevEui": "string",
      "nodeId": "number",
      "sensorId": "number",
      "subType": "number",
      "methods": [0, 1, 2, 3, 4]
    }
  }
}
